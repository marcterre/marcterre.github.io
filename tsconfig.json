{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },

  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "src/helpers/db.ts",
    "index.d.ts",
    "src/helpers/firebase.ts"
  ],
  "exclude": ["node_modules"]
}
